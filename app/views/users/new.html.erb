<% provide(:title, 'Sign Up') %>

<h1>Sign Up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %><!-- form_for takes a block with one variable, which we’ve called f for “form” -->

      <%= render 'shared/error_messages' %><!-- code to render the partial that displays error messages on the signup form -->

      <!--
        the following creates the HTML needed to make a labeled text field element appropriate for setting designated attribute of a User model
      -->

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>